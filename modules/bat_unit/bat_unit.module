/**
 * @section Bat Unit Type
 *
 * The following code deals with Bat Unit Types and their bundles. (entity types)
 *
 * Bat Unit Types are entities that deal with groups of Units. In a hotel use
 * case, a Unit Type bundle might be called 'Room', and individual entities of
 * type Unit Type might be called 'Single', 'Double', 'Triple', and so on.
 */

/**
 * Determines whether the given user has access to a unit type.
 *
 * @param string $op
 *   The operation being performed. One of 'view', 'update', 'create', 'delete'
 *   or just 'edit' (being the same as 'create' or 'update').
 * @param BatUnitType $unit_type
 *   Optionally a unit type or a unit type bundle to check access for. If nothing is
 *   given, access for all unit types is determined.
 * @param object $account
 *   The user to check for. Leave it to NULL to check for the global user.
 *
 * @return boolean
 *   Whether access is allowed or not.
 */
function bat_unit_type_access($op, $unit_type = NULL, $account = NULL) {
  return bat_entity_access($op, $unit_type, $account, 'bat_unit_type');
}

/**
 * Filters unit types based on permissions for multiple values.
 */
function bat_unit_type_access_filter($op, $unit_types = array(), $account = NULL) {
  $filtered_unit_types = array();

  // If no user object is supplied, the access check is for the current user.
  if (empty($account)) {
    $account = $GLOBALS['user'];
  }

  foreach ($unit_types as $key => $unit_type) {
    if (bat_unit_type_access($op, $unit_type, $account)) {
      $filtered_unit_types[$key] = $unit_type;
    }
  }
  return $filtered_unit_types;
}

/**
 * Access callback for the entity API.
 */
function bat_unit_type_bundle_access($op, $bundle = NULL, $account = NULL) {
  return user_access('administer bat_unit_type_bundle entities', $account);
}

/**
 * Implements hook_bat_entity_access_OP_condition_ENTITY_TYPE_alter().
 */
function bat_unit_type_bat_entity_access_view_condition_bat_unit_type_alter(&$conditions, $context) {
  $account = $context['account'];

  if (user_access('view any bat_unit_type unpublished entity', $account)) {
    return;
  }

  $old_conditions = $conditions;
  $conditions = db_and();

  if ($account->uid && user_access('view own bat_unit_type unpublished entities', $account)) {
    $or = db_and()
      ->condition($context['base_table'] . '.status', 0)
      ->condition($context['base_table'] . '.uid', $account->uid);
    $conditions->condition(db_or()
      ->condition($or)
      ->condition($context['base_table'] . '.status', 1)
    );

  }
  else {
    $conditions->condition($context['base_table'] . '.status', 1);
  }

  if ($old_conditions->count()) {
    $conditions->condition($old_conditions);
  }
}

/**
 * Access callback: Checks whether the user has permission to add a unit type.
 *
 * @return bool
 *   TRUE if the user has add permission, otherwise FALSE.
 *
 * @see node_menu()
 */
function _bat_unit_type_add_access() {
  if (user_access('administer bat_unit_type_bundle entities')) {
    // There are no unit type bundles defined that the user has permission to
    // create, but the user does have the permission to administer the content
    // types, so grant them access to the page anyway.
    return TRUE;
  }

  $bundles = bat_unit_get_type_bundles();
  foreach ($bundles as $bundle) {
    if (bat_unit_type_access('create', bat_unit_type_create(array('type' => $bundle->type, 'uid' => 0)))) {
      return TRUE;
    }
  }

  return FALSE;
}

/**
 * Gets an array of all unit type bundles, keyed by the bundle name.
 *
 * @param string $bundle_name
 *   If set, the bundle with the given name is returned.
 * @param bool $reset
 *   A boolean indicating that the internal cache should be reset.
 *
 * @return BatUnitTypeBundle[]
 *   Depending whether $bundle isset, an array of unit type bundles or a single one.
 */
function bat_unit_get_type_bundles($bundle_name = NULL, $reset = FALSE) {
  // entity_load() will get the Entity controller for our unit type entity and call
  // the load function of that object.
  $bundles = entity_load_multiple_by_name('bat_unit_type_bundle', isset($bundle_name) ? array($bundle_name) : FALSE);
  return isset($bundle_name) ? reset($bundles) : $bundles;
}

