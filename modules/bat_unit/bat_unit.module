/**
 * Gets a list of unit types keyed by id and name in value.
 */
function bat_unit_type_ids($bundle = '') {
  $unit_types = array();

  $query = new EntityFieldQuery();
  $query->entityCondition('entity_type', 'bat_unit_type');

  if ($bundle != '') {
    $query->entityCondition('bundle', $bundle);
  }

  $result = $query->execute();

  if (count($result) > 0) {
    $entities = entity_load('bat_unit_type', array_keys($result['bat_unit_type']));
    foreach ($entities as $unit_type) {
      $wrapper = entity_metadata_wrapper('bat_unit_type', $unit_type);
      $unit_types[$wrapper->unit_type_id->value()] = $wrapper->name->value();
    }
  }

  return $unit_types;
}

