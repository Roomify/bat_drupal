/**
 * VBO action: Publish unit.
 */
function bat_unit_publish(&$unit, $context) {
  $unit->status = 1;
  $unit->save();
}

/**
 * VBO action: Unpublish unit.
 */
function bat_unit_unpublish(&$unit, $context) {
  $unit->status = 0;
  $unit->save();
}

