/**
 * Implements hook_form_FORM_ID_alter().
 *
 * FORM_ID = bat_unit_type_bundle_operation_form
 * Prevent a unit type bundle with associated unit types from being deleted.
 */
function bat_unit_form_bat_unit_type_bundle_operation_form_alter(&$form, &$form_state, $form_id) {
  // Check if unit types of a unit type bundle exist before allowing deletion.
  if ($form_state['op'] == 'delete') {
    $unit_type_bundle = $form_state['bat_unit_type_bundle'];

    // Load the unit types associated with this bundle.
    $query = new EntityFieldQuery();

    $query->entityCondition('entity_type', 'bat_unit_type')
          ->propertyCondition('type', $unit_type_bundle->type);
    $unit_types = $query->execute();
    if (isset($unit_types['bat_unit_type']) && count($unit_types['bat_unit_type'])) {

      // This bundle has associated unit types, don't allow deletion.
      form_set_error('confirm', t('This unit type bundle has associated unit types. Please delete all unit types before attempting to delete this unit type bundle.'));

      unset($form['description']);
      unset($form['actions']);
      unset($form['confirm']);
    }
  }
}

